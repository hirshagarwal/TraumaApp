<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hirshagarwal.traumaapp.autoTriage.Breathing">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_done_white"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="#009688"
        app:rippleColor="#FFF"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="trueButton"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_close_white"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="#630005"
        app:rippleColor="#FFF"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignTop="@+id/fabConfirm"
        android:layout_alignParentStart="true"
        android:onClick="falseButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Patient is breathing"
        android:id="@+id/textView2"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/fabCancel"
        android:layout_toEndOf="@+id/fabCancel" />
</RelativeLayout>
