<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hirshagarwal.traumaapp.gcs.Eyes">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spontaneous"
        android:id="@+id/spontaneousButton"
        android:background="#C2185B"
        android:onClick="spontaneousButton"
        android:layout_above="@+id/soundButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO Sound"
        android:id="@+id/soundButton"
        android:background="#D81B60"
        android:onClick="soundButton"
        android:layout_above="@+id/pressureButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure"
        android:id="@+id/pressureButton"
        android:background="#E91E63"
        android:onClick="pressureButton"
        android:layout_above="@+id/noneButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:id="@+id/noneButton"
        android:background="#EC407A"
        android:onClick="noneButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
